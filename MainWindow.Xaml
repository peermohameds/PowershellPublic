<Window x:Name="RemoteMgmt" x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="Wealth Deployment Remote Management" Height="550" Width="725" BorderThickness="2,0" ResizeMode="NoResize" ToolTip="Wealth Deployment Remote Management" WindowStyle="ThreeDBorderWindow"
        Background="FloralWhite" BorderBrush="FloralWhite">
    <StackPanel Margin="0 0 0 0">
    <Grid Margin="10 0 10 20" Height="470">
            <Border Background="FloralWhite" BorderBrush="CadetBlue" BorderThickness="0,0,0,3" >
               
        <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50" ToolTip="User Credential Panel"></RowDefinition>
                        <RowDefinition Height="Auto" ToolTip="User Credential Panel"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Border Background="LightGray" BorderBrush="SlateGray" BorderThickness="0 0 0 0.5" CornerRadius="2">

                        <Grid Margin="0 ">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"></ColumnDefinition>
                                <ColumnDefinition Width="150"></ColumnDefinition>
                                <ColumnDefinition Width="100"></ColumnDefinition>
                                <ColumnDefinition Width="150"></ColumnDefinition>
                                <ColumnDefinition Width="100"></ColumnDefinition>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Label Content="UserName" Grid.Column="0"  FontWeight="DemiBold" Margin="0 12"></Label>
                            <TextBox Name="usrtxtbox" Text="" Width="120" Grid.Column="1" FontWeight="DemiBold" Margin="0 12" VerticalContentAlignment="Center" BorderThickness="0.5" MaxLines="1"></TextBox>
                            <Label Content="Password" Grid.Column="2"  FontWeight="DemiBold" Margin="0 12"></Label>
                            <PasswordBox Name="usrpwdbox" Grid.Column="3" Width="120" FontWeight="DemiBold" Margin="0 12" VerticalContentAlignment="Center" BorderThickness="0.5"></PasswordBox>
                            <Button Name="passsubmit" Width="80"  Content="Submit" BorderBrush="MediumBlue" Foreground="FloralWhite" Grid.Column="4" FontWeight="DemiBold" Margin="0 12" Background="DimGray"  BorderThickness="0,0,0,0.5">
                            </Button>
                            <TextBlock Grid.Column="5" Name="Msgtxtblk" Text="16:21:19" FontWeight="DemiBold" FontSize="16" Margin="10" VerticalAlignment="Center"></TextBlock> 
                        </Grid>
                        
                    </Border>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <Label Margin="0 10">Actiosn Menu</Label>
                            <ListBox Name="Servers" BorderBrush="SlateGray" Height="160" Margin="0 0 15 5">
                                
                                <ListBoxItem>One</ListBoxItem>
                                <ListBoxItem>One</ListBoxItem>
                                <ListBoxItem>One</ListBoxItem>
                                <ListBoxItem>One</ListBoxItem>
                                <ListBoxItem>One</ListBoxItem>
                                <ListBoxItem>One</ListBoxItem>
                                <ListBoxItem>One</ListBoxItem>
                                <ListBoxItem>One</ListBoxItem>
                            </ListBox>
                        </StackPanel>
                        <StackPanel Grid.Column="1">
                            <Label Content="Server Names" Margin="0 10"/>
                            <TextBox Name="Serversinput" TextWrapping="Wrap" AcceptsReturn="True" ScrollViewer.VerticalScrollBarVisibility="Auto" Height="160"   Margin="5 0 10 5"></TextBox>
                        </StackPanel>
                        <StackPanel Grid.Column="2">
                            
                        </StackPanel>
                    </Grid>            
        </Grid>   
        </Border>
    </Grid>
        <Grid></Grid>   
    </StackPanel>
</Window>
